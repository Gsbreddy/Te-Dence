<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical" >

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_delete_records"
        android:layout_below="@+id/button_delete_records"
        android:layout_marginTop="48dp"
        android:onClick="delete_manually_entered_data"
        android:text="Delete manually entered data"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/button_delete_records"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="122dp"
        android:onClick="delete_all_attendance_records"
        android:text="Delete all attendance records"
        android:textColor="#ffffff" />

</RelativeLayout>
